{
  "version": "0.5.4",
  "variants": [
    "lts",
    "current"
  ],
  "build": {
    "latest": "current",
    "rootDistro": "debian",
    "architectures": [
      "linux/amd64",
      "linux/arm64"
    ],
    "tags": [
      "node-extras-devcontainer:${VERSION}-${VARIANT}"
    ],
    "variantTags": {
      "lts": [
        "node-extras-devcontainer:${VERSION}-lts"
      ],
      "current": [
        "node-extras-devcontainer:${VERSION}-current"
      ]
    }
  },
  "dependencies": {
    "image": "node:${VARIANT}-bookworm",
    "imageLink": "https://hub.docker.com/_/node",
    "debian": [
      {
        "cgIgnore": false,
        "name": "yarn"
      }
    ],
    "git": {
      "Oh My Zsh!": "/home/node/.oh-my-zsh",
      "nvm": "/usr/local/share/nvm"
    },
    "npm": [
      "eslint",
      "tslint-to-eslint-config",
      "typescript"
    ],
    "languages": {
      "Node.js": {
        "cgIgnore": true,
        "path": "/usr/local"
      },
      "TypeScript": {
        "cgIgnore": true,
        "versionCommand": "tsc --version | grep -oE '[0-9]+\\.[0-9]+\\.[0-9]+'",
        "path": "/usr/local/share/npm-global",
        "downloadUrl": "https://www.typescriptlang.org/"
      }
    },
    "other": {
      "git": { }
    }
  }
}
